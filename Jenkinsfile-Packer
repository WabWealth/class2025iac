pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Packer Init') {
            steps {
                sh '''
                  cd packer
                  packer init .
                '''
            }
        }

        stage('Build AMI') {
            steps {
                sh '''
                  cd packer
                  packer build aws-nginx-git-java.pkr.hcl
                '''
            }
        }
    }

    post {
        success {
            echo 'AMI build completed successfully'
        }
        failure {
            echo 'AMI build failed'
        }
    }
}
